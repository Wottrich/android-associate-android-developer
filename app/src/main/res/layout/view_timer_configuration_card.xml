<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/timerComponentContainer"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/token_normal"
    android:layout_marginBottom="@dimen/token_normal"
    android:paddingBottom="@dimen/token_normal">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/colorOnBackground"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/componentTitle"
        android:layout_width="283dp"
        android:layout_height="34dp"
        android:layout_marginHorizontal="@dimen/token_small_x"
        android:layout_marginTop="@dimen/token_small_x"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/componentContentResume"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/fragment_new_pomodoro_time_config_time_to_focus_section_title" />

    <TextView
        android:id="@+id/componentContentResume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/token_small_x"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/componentTitle"
        app:layout_constraintBottom_toBottomOf="@id/componentTitle"
        tools:text="25 minutos" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/componentTitle">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/leftOptionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/token_small_x"
            android:layout_marginTop="@dimen/token_small"
            app:cardCornerRadius="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginStart="@dimen/token_small_x"
            app:strokeColor="?attr/colorOnBackground"
            app:strokeWidth="1dp"
            android:minWidth="@dimen/token_big_x">

            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/leftButtonLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/token_small"
                android:textAppearance="?attr/textAppearanceBody1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="-1" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/rightOptionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="@dimen/token_small"
            android:layout_marginEnd="@dimen/token_small_x"
            app:cardCornerRadius="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginStart="@dimen/token_small_x"
            app:strokeColor="?attr/colorOnBackground"
            app:strokeWidth="1dp"
            android:minWidth="@dimen/token_big_x">

            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/rightButtonLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/token_small"
                android:textAppearance="?attr/textAppearanceBody1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="+1" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/disclaimerLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/token_small_x"
            android:layout_marginTop="@dimen/token_small_x"
            android:textAlignment="inherit"
            android:textAppearance="?attr/textAppearanceSubtitle2"
            app:layout_constraintTop_toBottomOf="@id/leftOptionButton"
            tools:text="@string/fragment_new_pomodoro_time_config_time_to_focus_section_disclaimer" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>